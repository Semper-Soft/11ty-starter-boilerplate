{
  "name": "11ty-starter-boilerplate",
  "version": "1.0.0",
  "description": "Eleventy Starter Boilerplate",
  "scripts": {
    "clean": "rimraf dist",
    "start": "cross-env NODE_ENV=development npm-run-all -l clean --parallel start:*",
    "start:webpack": "webpack --watch",
    "start:eleventy": "eleventy --serve",
    "build": "cross-env NODE_ENV=production npm-run-all -l clean build:*",
    "build:webpack": "webpack",
    "build:eleventy": "eleventy",
    "format": "run-s format:*",
    "format:js": "prettier --write **/*.{js,s?css,yml} !dist && eslint '**/*.js' --fix",
    "format:json": "prettier '**/*.json' --write",
    "lint": "eslint --ext .js ."
  },
  "keywords": [
    "eleventy",
    "tailwind",
    "website",
    "blog",
    "template"
  ],
  "author": "Radovan Kuka",
  "license": "ISC",
  "dependencies": {
    "@11ty/eleventy-navigation": "^0.1.6",
    "dotenv": "^8.2.0",
    "luxon": "^1.25.0"
  },
  "devDependencies": {
    "@11ty/eleventy": "^0.11.1",
    "autoprefixer": "^10.2.4",
    "cross-env": "^7.0.3",
    "css-loader": "^5.0.1",
    "css-minimizer-webpack-plugin": "^1.2.0",
    "cssnano": "^4.1.10",
    "eleventy-plugin-error-overlay": "^0.1.2",
    "eleventy-plugin-lazyimages": "^2.1.0",
    "eslint": "^7.18.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "html-minifier": "^4.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.3",
    "mini-css-extract-plugin": "^1.3.5",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^14.0.0",
    "postcss-loader": "^4.2.0",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "rimraf": "^2.7.1",
    "sass": "^1.32.5",
    "sass-loader": "^10.1.1",
    "tailwindcss": "^2.0.2",
    "terser-webpack-plugin": "^5.1.1",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0",
    "webpack-manifest-plugin": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "eslint"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
