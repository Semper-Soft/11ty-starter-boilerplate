<!DOCTYPE html>
<html lang="{{ site.lang }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% if title %}{{ title }} â€¢{% endif %} {{ site.name }}</title>
    <meta name="description" content="{% if description %}{{ description }}{% elif excerpt %}{{ excerpt }}{% else %}{{site.description}}{% endif %}">

    {# include main.css #}
    <link rel="stylesheet" href="{% webpack 'main.css' %}">

    {# include static assets e.g. favicon, fonts etc #}
    <link rel="icon" type="image/png" href="{{ site.images.favicon }}">
  </head>

  <body>
    <main class="wrapper flex flex-col min-h-screen">
      {# include header #}
      {% include "components/header.njk" %}

      {# include content #}
      {{ content | safe }}

      {# include footer #}
      {% include "components/footer.njk" %}
    </main>

    {# include scripts #}
    <script async defer src="{% webpack 'main.js' %}"></script>

    <!-- LAST BUILD: {{ build.env }} {{ build.timestamp | dateToISO }} -->
  </body>
</html>
